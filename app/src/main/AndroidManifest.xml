<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dullio.destinyconnectionsmediaapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/destiny_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity android:name=".VisitingActivity"
            android:parentActivityName=".ContactActivity">
            <meta-data
                android:name=".ContactActivity"
                android:value="android.support.PARENT_ACTIVITY" />
        </activity>


        <activity android:name=".RedirectionActivity"
            android:parentActivityName=".ServiceActivity">

            <meta-data
                android:name=".ServiceActivity"
                android:value="android.support.PARENT_ACTIVITY" />
        </activity>


        <activity android:name=".TrainingActivity"
            android:parentActivityName=".ServiceActivity">

            <meta-data
                android:name=".ServiceActivity"
                android:value="android.support.PARENT_ACTIVITY" />
        </activity>

        <activity
            android:name=".ui.login.SignUpActivity"
            android:parentActivityName=".ui.login.SignUpActivity"
            android:theme="@style/AuthenticationTheme">
            <meta-data
                android:name=".ui.login.SignUpActivity"
                android:value="android.support.PARENT_ACTIVITY" />
        </activity>

        <activity
            android:name=".ServiceActivity"
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name=".HomeActivity"
                android:value="android.support.PARENT_ACTIVITY" />
        </activity>
        <activity
            android:name=".DetailedNotificationsActivity"
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name=".HomeActivity"
                android:value="android.support.PARENT_ACTIVITY" />
        </activity>
        <activity
            android:name=".AboutActivity"
            android:parentActivityName=".AccountActivity">
            <meta-data
                android:name=".AccountActivity"
                android:value="android.support.PARENT_ACTIVITY" />
        </activity>
        <activity
            android:name=".HelpAndFeedbackActivity"
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name=".HomeActivity"
                android:value="android.support.PARENT_ACTIVITY" />
        </activity>
        <activity
            android:name=".EventsActivity"
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name=".HomeActivity"
                android:value="android.support.PARENT_ACTIVITY" />
        </activity>
        <activity
            android:name=".AccountActivity"
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name=".HomeActivity"
                android:value="android.support.PARENT_ACTIVITY" />
        </activity>
        <activity
            android:name=".WebviewActivity"
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name=".HomeActivity"
                android:value="android.support.PARENT_ACTIVITY" />
        </activity>
        <activity
            android:name=".EnquiryActivity"
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name=".HomeActivity"
                android:value="android.support.PARENT_ACTIVITY" />
        </activity>
        <activity
            android:name=".AdvertisementActivity"
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name=".HomeActivity"
                android:value="android.support.PARENT_ACTIVITY" />
        </activity>
        <activity
            android:name=".ContactActivity"
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name=".HomeActivity"
                android:value="android.support.PARENT_ACTIVITY" />
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"
            android:launchMode="singleTop" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AuthenticationTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>