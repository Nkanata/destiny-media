<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/paddingMax"
            android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good morning, Walter"
            android:textSize="24sp"
            android:layout_gravity="center"
            style="@style/TextTitleTheme"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextNormalTheme"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/paddingMinimum"
            android:text="@string/welcome_message_dashboard_fragment_description" />

        </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dashboard_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="false" tools:targetApi="21" />


    </LinearLayout>


</androidx.core.widget.NestedScrollView>