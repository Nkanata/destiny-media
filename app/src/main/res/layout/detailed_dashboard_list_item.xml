<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/cardCornerRadius"
    app:cardElevation="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cardview_stroke"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/detailed_dashboard_imageView"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/marginMedium"
            android:layout_height="@dimen/cardImageSize">

        </ImageView>

        <TextView
            android:id="@+id/detailed_dashboard_title"
            android:layout_width="match_parent"
            android:paddingStart="@dimen/paddingMax"
            android:paddingEnd="@dimen/paddingMax"
            android:paddingRight="@dimen/paddingMax"
            android:paddingLeft="@dimen/paddingMax"
            android:layout_marginTop="@dimen/marginMedium"
            style="@style/TextTitleTheme"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/detailed_dashboard_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/paddingMax"
            android:paddingEnd="@dimen/paddingMax"
            android:paddingRight="@dimen/paddingMax"
            android:paddingLeft="@dimen/paddingMax"
            android:layout_marginTop="@dimen/marginMedium"
            style="@style/TextDescriptionTheme" />

        <TextView
            android:id="@+id/detailed_dashboard_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextControlActiveTheme"
            android:drawableLeft="@drawable/ic_arrow_forward_black_24dp"
            android:drawableStart="@drawable/ic_arrow_forward_black_24dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/paddingMax"
            android:background="@drawable/custom_selector"
            android:layout_marginTop="@dimen/marginMedium"
            android:drawablePadding="@dimen/paddingMax"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>